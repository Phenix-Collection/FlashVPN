<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <ImageView
        android:id="@+id/item_notification_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:id="@+id/item_notification_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="@dimen/title_bar_title_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_notification_icon"
        android:textColor="@color/text_gray_dark"/>

    <com.polestar.domultiple.widget.BlueSwitch
        android:id="@+id/item_notification_switch"
        android:layout_width="82.5dp"
        android:layout_height="80dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="33dp"
        android:paddingBottom="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
    </com.polestar.domultiple.widget.BlueSwitch>

    <View
        android:id="@+id/item_divider"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:background="@color/default_divider_color"
        android:layout_height="0.5dp"/>

</RelativeLayout>