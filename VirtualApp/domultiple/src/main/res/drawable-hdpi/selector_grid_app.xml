<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/home_pressed_color" />
            <solid android:color="@color/default_foreground_color" />
            <!--<gradient android:angle="270.0"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_foreground_color" />
            <!--<gradient android:angle="270.0" />-->

            <stroke android:width="0.5dp" android:color="@color/default_background_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/default_foreground_color" />
            <!--<gradient android:angle="270.0"  />-->

            <stroke android:width="0.5dp" android:color="@color/default_background_color" />
        </shape>
    </item>

</selector>