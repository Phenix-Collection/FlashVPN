<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.polestar.domultiple">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true" android:theme="@style/AppTheme"
        android:name=".PolestarApp">
        <activity
            android:name=".components.ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".components.ui.HomeActivity" android:screenOrientation="portrait" android:launchMode="singleTask"/>
        <activity android:name=".components.ui.AddCloneActivity" android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".components.ui.NotificationActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.FaqActivity" android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".components.ui.WebViewActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.SettingsActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.LockSecureQuestionActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.LockPasswordSettingActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.LockSettingsActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.FeedbackActivity" android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".components.ui.AppLoadingActivity" android:screenOrientation="portrait" android:exported="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:taskAffinity="com.polestar.domultiple.launch"/>

        <receiver android:name=".components.receiver.CrashReceiver" android:exported="false">
            <intent-filter>
                <action android:name="appclone.intent.action.SHOW_CRASH_DIALOG"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".components.receiver.ReferReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".components.receiver.WakeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.polestar.multiaccount.wake" />
            </intent-filter>
        </receiver>


        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"
            android:multiprocess="true" />

        <activity android:name="com.mopub.mobileads.MoPubActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.mobileads.MraidActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.common.MoPubBrowser" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.mobileads.MraidVideoPlayerActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
    </application>

</manifest>
