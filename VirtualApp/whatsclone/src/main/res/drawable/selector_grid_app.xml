<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/theme_color_pressed" android:startColor="@color/theme_color_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/theme_color_pressed" android:startColor="@color/theme_color_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/theme_color_pressed" />
            <gradient android:angle="270.0" android:endColor="@color/theme_color2" android:startColor="@color/theme_color2" />
        </shape>
    </item>

</selector>