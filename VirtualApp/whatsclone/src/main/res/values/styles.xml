<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color2</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/theme_color2</item>
        <item name="android:listViewStyle">@style/CustomListViewStyle</item>
        <item name="android:gridViewStyle">@style/CustomListViewStyle</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowAnimationStyle">@style/activityAnimationStyle</item>

    </style>

    <style name="CustomPopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/theme_color_pressed</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:listSelector">@drawable/app_pressed_selector</item>
    </style>

    <style name="AppTheme.FullScreenAndTranslucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.Launcher">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <!--<item name="android:windowBackground">@android:color/holo_green_light</item>-->
    </style>

    <style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TextStyle_Toast">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle_Dialog_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle_Activity_Title">
        <item name="android:textSize">@dimen/title_bar_title_size</item>
        <item name="android:textColor">@color/title_bar_text_color</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景阴影 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="activityAnimationStyle">

        <item name="@android:activityOpenEnterAnimation">@anim/slide_right_in</item>

        <item name="@android:activityOpenExitAnimation">@anim/slide_left_out</item>

        <item name="@android:activityCloseEnterAnimation">@anim/slide_left_in</item>

        <item name="@android:activityCloseExitAnimation">@anim/slide_right_out</item>

    </style>
    <style name="guide_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
    </style>
    <style name="guide_dialog_content">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/dialog_guide_title_text</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="guide_dialog_content_high_light">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/dialog_guide_high_light_content_text</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="guide_dialog_negative_button">
        <item name="android:textSize">16.0sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dialog_guide_button_negative_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/dialog_guide_negative_button_bg_sel</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">2.0sp</item>
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>
    <style name="guide_dialog_positive_button">
        <item name="android:textSize">16.0sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dialog_guide_button_positive_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/dialog_guide_positive_button_bg_sel</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">6.0dp</item>
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>
    <style name="guide_dialog_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_guide_title_text</item>
        <item name="android:layout_margin">15.0dip</item>
    </style>
    <!--<declare-styleable name="BlueSwitch">-->
        <!--<attr name="switchOn" format="reference"/>-->
        <!--<attr name="switchOff" format="reference"/>-->
    <!--</declare-styleable>-->

    <style name="AppTheme2" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
    </style>

    <style name="DialogActivityStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
