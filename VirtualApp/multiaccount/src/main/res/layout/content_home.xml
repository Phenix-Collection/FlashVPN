<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@mipmap/main_bg_min"
        android:layout_height="match_parent">
        <com.polestar.multiaccount.widgets.HomeBgView
            android:id="@+id/home_bg"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <ImageView
            android:id="@+id/img_supportAPI_18"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/main_bg_05_min"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/content_home"
            android:layout_height="match_parent">
            <com.polestar.multiaccount.widgets.AnimationLayout
                android:id="@+id/image_top"
                android:layout_width="0dp"
                android:layout_height="6dp"
                app:layout_widthPercent="50%"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_red_line"
                    app:layout_widthPercent="50%" />
            </com.polestar.multiaccount.widgets.AnimationLayout>

            <com.polestar.multiaccount.widgets.AnimationLayout
                android:id="@+id/image_bottom"
                android:layout_width="0dp"
                android:layout_height="6dp"
                app:layout_widthPercent="50%"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_blue_line"
                    app:layout_widthPercent="50%" />
            </com.polestar.multiaccount.widgets.AnimationLayout>

            <ImageView
                android:id="@+id/image_navigation"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:onClick="onNavigationClick"
                android:paddingBottom="24dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_navigation_selector" />

            <ImageView
                android:id="@+id/image_title"
                android:layout_width="98dp"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="28dp"
                android:paddingTop="28dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/home_title" />

            <com.polestar.multiaccount.widgets.AnimationImageView
                android:id="@+id/gifView"
                android:layout_width="50dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_height="50dp" />

            <FrameLayout
                android:id="@+id/frag_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/image_bottom"
                android:layout_below="@id/image_navigation" />

        </android.support.percent.PercentRelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/blur_forground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>