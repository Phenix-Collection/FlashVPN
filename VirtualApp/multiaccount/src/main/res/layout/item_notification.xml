<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/notification_height">

    <ImageView
        android:id="@+id/item_notification_icon"
        android:layout_width="@dimen/icon_size_default"
        android:layout_height="@dimen/icon_size_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/notification_item_margin"/>

    <TextView
        android:id="@+id/item_notification_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="@dimen/title_bar_title_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_notification_icon"
        android:textColor="@color/primary_dark_material_dark"/>

    <com.polestar.superclone.widgets.BlueSwitch
        android:id="@+id/item_notification_switch"
        android:layout_width="82.5dp"
        android:layout_height="80dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="33dp"
        android:paddingBottom="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
    </com.polestar.superclone.widgets.BlueSwitch>

    <View
        android:id="@+id/item_divider"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:background="@color/divider_gray"
        android:layout_height="0.5dp"/>

</RelativeLayout>