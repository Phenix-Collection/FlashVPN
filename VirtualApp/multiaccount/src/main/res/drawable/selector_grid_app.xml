<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="3.0px" android:color="@color/grid_line" />

            <gradient android:angle="270.0" android:endColor="@color/grid_pressed" android:startColor="@color/grid_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/grid_pressed" android:startColor="@color/grid_pressed" />

            <stroke android:width="5.0px" android:color="@color/grid_line" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/grid_bg" android:startColor="@color/grid_bg" />

            <stroke android:width="5.0px" android:color="@color/grid_line" />
        </shape>
    </item>

</selector>