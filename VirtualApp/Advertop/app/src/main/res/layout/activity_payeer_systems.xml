<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/primaryText"
		android:drawableLeft="@drawable/ic_payment_systems"
		android:gravity="left"
		android:paddingLeft="@dimen/socialIconSize"
		android:paddingRight="@dimen/socialIconSize"
		android:paddingTop="@dimen/half_margin"
		android:paddingBottom="@dimen/half_margin"
		android:text="@string/payeerSystemsDialogTitle"
		android:textColor="@color/primaryIconText"/>

	<TextView
		android:id="@+id/payeerSystemsInfoText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/activity_vertical_margin"
		android:text="@string/fundsFragmentNoPaymentSystemsException"
		android:textColor="@color/primaryText"
		android:textSize="20sp"
		android:visibility="gone"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/payeerSystemsRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</LinearLayout>