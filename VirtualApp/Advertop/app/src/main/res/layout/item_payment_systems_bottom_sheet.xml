<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:paddingTop="12dp"
	android:paddingBottom="12dp"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/item_payment_systems_bottom_sheet_icon"
		android:layout_width="@dimen/socialIconSize"
		android:layout_height="@dimen/socialIconSize"
		android:contentDescription="@string/paymentSystemIcon"/>

	<TextView
		android:id="@+id/item_payment_systems_bottom_sheet_title"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/half_margin"
		android:textColor="@color/primaryText"/>

</LinearLayout>