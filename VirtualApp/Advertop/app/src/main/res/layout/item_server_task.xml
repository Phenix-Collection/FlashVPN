<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/item_task_card"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/tasks_card_view_height"
	android:layout_marginLeft="4dp"
	app:elevation="0dp"
	android:layout_marginRight="4dp"
	app:cardBackgroundColor="@color/primaryIconText"
	app:cardCornerRadius="5dp">

	<FrameLayout
		android:id="@+id/item_task_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/selector_selected_recycler_view_item"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/item_task_icon"
			android:layout_width="@dimen/socialIconSize"
			android:layout_height="@dimen/socialIconSize"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginStart="@dimen/activity_horizontal_margin"
			android:layout_marginTop="16dp"
			android:contentDescription="@string/taskIconContentDesc"
			android:scaleType="centerCrop"
			tools:src="@drawable/ic_balance_large"/>

		<ImageView
			android:id="@+id/item_new_task_mark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:contentDescription="@string/taskIconContentDesc"
			android:src="@drawable/ic_new_task"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/item_task_title"
			fontPath="@string/fontBold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginBottom="@dimen/half_margin"
			android:layout_marginEnd="95dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="95dp"
			android:layout_marginStart="80dp"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:textColor="@android:color/black"
			tools:text="KUdfhbdsj bdfgb df bdfj bdhfb jdfbg jb jgbj"/>

		<TextView
			android:id="@+id/item_task_description"
			fontPath="@string/fontMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="95dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="95dp"
			android:layout_marginStart="80dp"
			android:layout_marginTop="10dp"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:textColor="@color/secondaryText"
			tools:text="Some hdfg jkdfgj b sdjgnfdjk gjn kjhf jdkfg njkdfhn j"/>

		<View
			android:layout_width="3dp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:layout_marginEnd="80dp"
			android:background="@color/colorDarkGrayAlpha"/>

		<TextView
			android:id="@+id/item_task_cost"
			fontPath="fonts/Roboto-Regular.ttf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:background="@drawable/shape_price"
			android:gravity="center"
			android:padding="@dimen/half_margin"
			android:textColor="@color/primaryIconText"
			android:textSize="12sp"
			tools:text="+0.5 R"/>

	</FrameLayout>

	<View
		android:id="@+id/item_not_enable_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorDarkGrayAlpha"
		android:visibility="gone"/>
</android.support.v7.widget.CardView>