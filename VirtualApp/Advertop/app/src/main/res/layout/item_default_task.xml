<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/tasks_card_view_height"
	android:layout_marginLeft="4dp"
	android:layout_marginRight="4dp"
	app:cardBackgroundColor="@color/primaryIconText"
	app:cardCornerRadius="5dp">

	<FrameLayout
		android:id="@+id/item_task_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/selector_selected_recycler_view_item"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/item_task_icon"
			android:layout_width="@dimen/socialIconSize"
			android:layout_height="@dimen/socialIconSize"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginStart="@dimen/activity_horizontal_margin"
			android:contentDescription="@string/taskIconContentDesc"
			android:scaleType="centerCrop"
			tools:src="@drawable/ic_balance_large"/>

		<TextView
			android:id="@+id/item_task_title"
			fontPath="@string/fontBold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginBottom="10dp"
			android:layout_marginEnd="95dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="95dp"
			android:layout_marginStart="80dp"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:textColor="@android:color/black"
			tools:text="Asosuidyh kudfjg dfkugk udfkg kdfg df g"/>

		<TextView
			android:id="@+id/item_task_description"
			fontPath="@string/fontMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="95dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="95dp"
			android:layout_marginStart="80dp"
			android:layout_marginTop="10dp"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:textColor="@color/colorPrimary"
			android:textStyle="bold"
			tools:text="ashbdjskdhbfjk bjkdshb jhbdgjh dfjg jdfkjh"/>

		<View
			android:layout_width="3dp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:layout_marginEnd="80dp"
			android:background="@color/colorDarkGrayAlpha"/>

		<TextView
			android:id="@+id/item_task_cost"
			fontPath="fonts/Roboto-Regular.ttf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:background="@drawable/shape_price"
			android:gravity="center"
			android:padding="@dimen/half_margin"
			android:textColor="@color/primaryIconText"
			android:textSize="12sp"
			android:textStyle="bold"
			tools:text="+1.5R"/>

	</FrameLayout>
</android.support.v7.widget.CardView>