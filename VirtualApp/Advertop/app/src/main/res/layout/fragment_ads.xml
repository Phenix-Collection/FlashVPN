<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:fillViewport="true"
	android:background="@drawable/window_bg"
	android:layout_height="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:id="@+id/adsFrag_headerLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/half_margin"
			android:layout_marginStart="@dimen/half_margin"
			android:layout_marginEnd="@dimen/half_margin"
			android:clickable="true"
			app:cardBackgroundColor="@color/primaryIconText"
			app:cardCornerRadius="4dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="@android:color/black"
				android:padding="@dimen/activity_horizontal_margin"
				android:text="@string/offerWallHeaderLayoutTitle"/>

			<ImageView
				android:id="@+id/adsFrag_headerLayoutIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right"
				android:layout_marginRight="@dimen/activity_horizontal_margin"
				android:src="@drawable/ic_right_arrow"/>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/adsFrag_headerTextLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:visibility="gone"
			app:cardBackgroundColor="@color/primaryIconText"
			app:cardCornerRadius="4dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="@color/secondaryText"
				android:padding="@dimen/activity_horizontal_margin"
				android:text="@string/offerWallHeaderLayoutText"/>
		</android.support.v7.widget.CardView>

		<!--<TextView-->
			<!--android:id="@+id/adsFrag_headerTv"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:gravity="center"-->
			<!--android:padding="@dimen/half_margin"-->
			<!--android:text="@string/videoAdHeaderText"-->
			<!--android:textColor="@color/secondaryText"/>-->

		<android.support.v7.widget.RecyclerView
			android:id="@+id/adsFrag_recyclerView"
			android:layout_marginTop="@dimen/half_margin"
			android:layout_width="match_parent"
			android:paddingStart="@dimen/half_margin"
			android:paddingEnd="@dimen/half_margin"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/adsFrag_footerTv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:padding="@dimen/half_margin"
			android:text="@string/videoAdFooterText"
			android:textColor="@color/primaryText"/>

	</LinearLayout>
</android.support.v4.widget.NestedScrollView>