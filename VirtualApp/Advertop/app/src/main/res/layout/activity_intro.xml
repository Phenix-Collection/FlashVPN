<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bg_intro"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary">

	<android.support.v4.view.ViewPager
		android:id="@+id/introViewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="@dimen/button_left_margin"/>

	<LinearLayout
		android:id="@+id/introPagerDotLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginBottom="@dimen/button_left_margin"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/introPagerFirstDot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/half_margin"
			android:src="@drawable/selected_page_dot"/>

		<ImageView
			android:id="@+id/introPagerSecDot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/half_margin"
			android:src="@drawable/unselected_page_dot"/>

		<ImageView
			android:id="@+id/introPagerThirdDot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/half_margin"
			android:src="@drawable/unselected_page_dot"/>

		<ImageView
			android:id="@+id/introPagerFourthDot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/half_margin"
			android:src="@drawable/unselected_page_dot"/>

		<ImageView
			android:id="@+id/introPagerFifthDot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/half_margin"
			android:src="@drawable/unselected_page_dot"/>

	</LinearLayout>

	<Button
		android:id="@+id/introBut"
		android:layout_width="150dp"
		android:layout_marginBottom="@dimen/activity_horizontal_margin"
		android:layout_height="wrap_content"
		android:text="@string/intro_next_but"
		android:layout_gravity="bottom|center_horizontal"
		android:textSize="18sp"/>

</FrameLayout>