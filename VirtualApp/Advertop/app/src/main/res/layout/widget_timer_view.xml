<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/timerView"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:visibility="gone"
	android:orientation="vertical">

	<TextView
		android:id="@+id/timer_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/half_margin"
		android:textColor="@color/primaryText"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/timer_reward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorPrimary"
			android:textSize="40sp"
			android:textStyle="bold"/>

		<Button
			android:id="@+id/timer_getMoneyBut"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/half_margin"
			android:layout_marginStart="@dimen/half_margin"
			android:background="@drawable/selector_enabled_but"
			android:padding="@dimen/half_margin"
			android:text="@string/timer_getMoneyBut"
			android:textStyle="bold"/>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center"
		android:padding="@dimen/half_margin"
		android:text="@string/timer_infoText"
		android:textColor="@color/colorPrimary"
		android:textSize="12sp"
		android:textStyle="bold"/>

	<ImageView
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_gravity="center"
		android:src="@drawable/ic_bot_menu"/>

</LinearLayout>