<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_notification_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:id="@+id/item_notification_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_bar_title_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/item_notification_icon"
        android:layout_toEndOf="@id/item_notification_icon"
        android:textColor="@color/text_gray_dark"
        android:maxLines="1"/>

    <in.dualspace.cloner.widget.RoundSwitch
        android:id="@+id/item_notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/item_divider"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/default_background_color"
        android:layout_height="1dp"/>

</RelativeLayout>