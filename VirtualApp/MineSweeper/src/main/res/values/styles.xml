<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="guide_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
    </style>
    <style name="guide_dialog_content">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/dialog_guide_title_text</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="guide_dialog_content_high_light">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/dialog_guide_high_light_content_text</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="guide_dialog_negative_button">
        <item name="android:textSize">16.0sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dialog_guide_button_negative_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/dialog_guide_negative_button_bg_sel</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">2.0sp</item>
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>
    <style name="guide_dialog_positive_button">
        <item name="android:textSize">16.0sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dialog_guide_button_positive_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/dialog_guide_positive_button_bg_sel</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">6.0dp</item>
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>
    <style name="guide_dialog_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_guide_title_text</item>
        <item name="android:layout_margin">15.0dip</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景阴影 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
