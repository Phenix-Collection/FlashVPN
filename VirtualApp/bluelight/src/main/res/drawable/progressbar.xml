<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3.0dip" />
            <stroke android:color="@android:color/transparent" android:width="0.5dip" />
            <solid android:color="@color/progress_bar_bg" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <size android:height="3.0dip" />
                <solid android:color="@color/progress_bar_progress" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3.0dip" />
                <size android:height="3.0dip" />
                <solid android:color="@color/progress_bar_progress" />
            </shape>
        </clip>
    </item>
</layer-list>
