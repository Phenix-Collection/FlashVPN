<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/navigation_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_nav" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_switch" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/nav_switch"
                style="@style/main_view_switch_compat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                app:switchMinWidth="40.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_help"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_help" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:src="@drawable/nav_tip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_share"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_share" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:src="@drawable/nav_tip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_notification" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/nav_notification"
                style="@style/main_view_switch_compat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                app:switchMinWidth="40.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_rate"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_rate" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:src="@drawable/nav_tip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_feedback"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/nav_menu_feedback" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:src="@drawable/nav_tip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/nav_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/nav_menu_item_margin_end"
            android:paddingStart="@dimen/nav_menu_item_margin_start">

            <TextView
                android:id="@+id/nav_version"
                style="@style/nav_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
